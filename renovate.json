{
  "pinVersions": false,
  "semanticCommits": true,
  "semanticPrefix": "chore(dependency)",
  "separateMajorMinor": false,
  "prHourlyLimit": 100,
  "labels": ["dependencies"],
  "timezone": "Europe/Moscow",
  "lockFileMaintenance": {
    "enabled": true
  },
  "baseBranches": ["main"],
  "packageFiles": [
    "package.json",
    "templates/node/**/package.json",
    "templates/other/**/package.json",
    "configs/docker/**",
    ".github/workflows/**/*.yml"
  ]
}