{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "exclude": ["build", "templates", "my-app"],
  "include": ["src"]
}